<RootWidget>: #:kivy

    products_gl: products_gl_id
    search_text_input: search_text_input_id
    BoxLayout:
        orientation:'vertical'
        size: root.width, root.height

        BoxLayout:
            orientation:'horizontal'
            size_hint: (1, 0.075)

            Label:
                text:'Products'
        
        ScrollView:
            do_scroll_y: True  #Tutorial:https://www.youtube.com/watch?v=MpS9zJM_ikw
            do_scroll_x: False #Tutorial:https://www.youtube.com/watch?v=WVRenoWmVNs
            
            GridLayout:
                id: products_gl_id
                cols:1
                row_default_height: 50
                row_force_default: True  
                
                height: self.minimum_height  #did not understand how and why these two lines work !!!???....
                size_hint_y: None
                
        BoxLayout:
            orientation:'vertical'
            size_hint: (1, 0.1)

            GridLayout:
                cols:2
                rows:1
                TextInput:
                    id: search_text_input_id
                    hint_text: 'Enter here what you want to search for.' #placeholder text
                    multiline: False
                    font_size: 25
                Button:
                    text:'Search'
                    font_size: 25
                    size_hint: (0.2, 1)
                    background_color: (1, 0.5, 0.7, 1)
                    on_release: root.on_release_search()